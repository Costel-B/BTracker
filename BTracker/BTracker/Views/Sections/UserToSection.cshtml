@model BTracker.Models.Section

@{
    ViewData["Title"] = "UserToSection";
}

<h4>Assign user to "@Html.DisplayFor(x => x.SectionName)" section</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserToSection" asp-route-id="@ViewBag.projectId" asp-route-place="@ViewBag.place">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SectionId" />
            <input type="hidden" asp-for="SectionName" readonly />
            <input type="hidden" asp-for="ProjectId" readonly />
            <div class="form-group">
                <label asp-for="ToUserId" class="control-label"></label>
                <select asp-for="ToUserId" class="form-control" asp-items="ViewBag.ToUserId"></select>
                <span asp-validation-for="ToUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Assign to User" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="@ViewBag.place" asp-controller="Projects" asp-route-id="@ViewBag.projectId">Back to List</a>
</div>

