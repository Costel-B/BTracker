@model BTracker.Models.Project

@{
    ViewData["Title"] = "AddBrief";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100" style="width: auto;">
            <section>
                <form class="login100-form validate-form" id="account" method="post">
                    <span class="login100-form-title p-b-26">
                        Create a <b style="color: #150940">Project Brief</b> to explain what is the goal of this project
                    </span>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="ProjectId" />
                    <input type="hidden" asp-for="ProjectName" />
                    <input type="hidden" asp-for="ProjectSmallBrief" value="@Model.ProjectSmallBrief" />
                    <input type="hidden" asp-for="FilePath" value="@Model.FilePath" />
                    <input type="hidden" asp-for="UserId" value="@ViewBag.currentUserId" />

                    <div class="wrap-input100 validate-input" style="border-bottom: 0px;">
                        <textarea class="form-control" asp-for="ProjectBrief" cols="40" rows="5"></textarea>
                        <span class="txt1">5000 characters max</span>
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <button class="login100-form-btn submitFormBtn" type="submit">
                                Create Project Brief
                            </button>
                        </div>
                    </div>

                    <div class="text-center p-t-25">
                        <span class="txt1">
                            @Html.ActionLink("Back to Details", "Details", "Projects", new { id = ViewBag.projectId })
                        </span>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>