@model BTracker.Models.Ticket

@if(Model.TicketName != "EmptyTicketNullTicket1.2.3.4.5")
{ 
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TicketName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Section)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Section.SectionName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TicketState)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketState.TicketStateName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TicketPriority)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TicketPriority.TicketPriorityName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>
    <div>
        @Html.ActionLink("Edit Ticket", "Edit", "Tickets", new { id = Model.Section.ProjectId, sectionId = Model.SectionId, ticketId = Model.TicketId })
    </div>
}
