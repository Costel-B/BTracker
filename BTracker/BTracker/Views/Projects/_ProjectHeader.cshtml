@model BTracker.Models.Project

@{ 
    var place = ViewData["Title"].ToString();
}

<div class="dis-flex justify-content-between align-items-center">
    <ul class="navbar-nav mb-2 mb-lg-0">
        <li class="nav-link" style="padding: 0;">
            <h2 class="title">@Html.DisplayFor(item => item.ProjectName)</h2>
        </li>
    </ul>
    <ul>
        <li class="nav-link dis-flex" style="padding: 0; align-items: center;">
            <a id="indexProjectLink" asp-action="Details" asp-route-id="@Model.ProjectId">Details</a>
            <a id="indexProjectLink" asp-action="List" asp-route-id="@Model.ProjectId">List</a>
            <div class="dropdown" id="indexProjectButton">
                <button class="" type="button" style="font-size: 14px; color: #fff;" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    More
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" asp-action="Edit" asp-route-id="@Model.ProjectId">Change Name</a>
                    <a class="dropdown-item" asp-action="Delete" asp-route-id="@Model.ProjectId">Delete Project</a>
                </div>
            </div>
        </li>
    </ul>
</div>