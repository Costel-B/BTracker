@model BTracker.Models.Project

@{
    ViewData["Title"] = "AddSmallBrief";
}

<h1>AddSmallBrief</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSmallBrief">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectId" />
            <input type="hidden" asp-for="ProjectName" class="form-control" />
            <div class="form-group">
                <label class="control-label">What we will make</label>
                <input asp-for="ProjectSmallBrief" class="form-control" />
                <span asp-validation-for="ProjectSmallBrief" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="UserId" value="@ViewBag.currentUserId" readonly />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to Details", "Details", "Projects", new { id = ViewBag.projectId })
</div>

