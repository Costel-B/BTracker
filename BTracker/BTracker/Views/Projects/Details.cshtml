@model BTracker.Models.Views.ProjectSectionAndTaskesViewModel

@{
    ViewData["Title"] = "Details";
}

@await Component.InvokeAsync("ListProjects", Model.UserId)

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.ProjectName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project.ProjectName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project.User)
        </dt>
        @if (Model.Project.UserId == ViewBag.currentUserId)
        {
            <dd class="col-sm-10">
                Me
            </dd>
        }
        else
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Project.User.Email)
            </dd>
        }

        @foreach (var section in Model.Sections)
        {
            <dd class="col-sm-10">
                @await Html.PartialAsync("_SeeSectionProject", section)
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Add section", "Create", "Sections", new { id = Model.Project.ProjectId }) |
    @Html.ActionLink("Add user", "Create", "ProjectAccesses", new { id = Model.Project.ProjectId }) |
    @Html.ActionLink("Edit user", "Index", "ProjectAccesses", new { id = Model.Project.ProjectId }) |
    <a asp-action="Edit" asp-route-id="@Model.Project.ProjectId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
