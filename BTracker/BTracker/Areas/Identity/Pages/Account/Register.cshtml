@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100">
            <form class="login100-form validate-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <span class="login100-form-title p-b-26">
                    Welcome to <b style="color: #150940">BTracker</b>
                </span>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="wrap-input100 validate-input">
                    <input class="input100" asp-for="Input.Email" placeholder="Email" type="text">
                </div>

                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    <input class="input100" type="password" asp-for="Input.Password" placeholder="Password">
                </div>

                <div class="wrap-input100 validate-input" data-validate="Confirm password">
                    <input class="input100" type="password" asp-for="Input.ConfirmPassword" placeholder="Confirm Password">
                </div>

                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <button class="login100-form-btn submitFormBtn" type="submit">
                            Register
                        </button>
                    </div>
                </div>

                <div class="text-center p-t-115">
                    <span class="txt1">
                        Already have a account?
                    </span>

                    <b>@Html.ActionLink("Log in", "Account", "Identity", new { id = "Login" })</b>
                </div>
                <div class="text-center">
                    <span class="txt1">
                        Enter as a 
                    </span>

                    <b>@Html.ActionLink("Demo User", "Demo", "Demo")</b>
                </div>
            </form>
		</div>
	</div>
</div>


